<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:padding="8dp">
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Tools"
			android:textStyle="bold"
			android:textSize="16sp"
			android:paddingTop="8dp"
			android:paddingBottom="4dp"/>
		<Button
			android:id="@+id/logs"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/logs"/>

		<!-- Traffic Statistics -->
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Traffic Statistics"
			android:textStyle="bold"
			android:textSize="16sp"
			android:paddingTop="16dp"
			android:paddingBottom="4dp"/>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@color/info_background"
			android:padding="8dp">
			<!-- Upload -->
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/traffic_upload"
				android:textSize="14sp"/>
			<TextView
				android:id="@+id/traffic_upload"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/traffic_not_available"
				android:textSize="12sp"
				android:paddingLeft="16dp"
				android:paddingTop="4dp"
				android:textColor="@color/hint_text"/>
			<TextView
				android:id="@+id/packets_upload"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/traffic_not_available"
				android:textSize="11sp"
				android:paddingLeft="16dp"
				android:textColor="@color/hint_text"/>

			<!-- Download -->
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/traffic_download"
				android:textSize="14sp"
				android:paddingTop="8dp"/>
			<TextView
				android:id="@+id/traffic_download"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/traffic_not_available"
				android:textSize="12sp"
				android:paddingLeft="16dp"
				android:paddingTop="4dp"
				android:textColor="@color/hint_text"/>
			<TextView
				android:id="@+id/packets_download"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/traffic_not_available"
				android:textSize="11sp"
				android:paddingLeft="16dp"
				android:textColor="@color/hint_text"/>
		</LinearLayout>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Info"
			android:textStyle="bold"
			android:textSize="16sp"
			android:paddingTop="16dp"
			android:paddingBottom="4dp"/>
		<TextView
			android:id="@+id/github_link"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="SocksTun v1.0\n\nSOCKS5 VPN Tunnel Client\n\nGitHub: yiguihai11/sockstun"
			android:textSize="14sp"
			android:padding="8dp"
			android:background="@color/info_background"
			android:textColor="@color/info_text"/>
	</LinearLayout>
</ScrollView>
