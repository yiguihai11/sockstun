<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:padding="8dp">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="IP Settings"
			android:textStyle="bold"
			android:textSize="16sp"
			android:paddingTop="8dp"
			android:paddingBottom="4dp"/>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<CheckBox
				android:id="@+id/ipv4"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/ipv4"/>
			<CheckBox
				android:id="@+id/ipv6"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/ipv6"/>
		</LinearLayout>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="DNS Settings"
			android:textStyle="bold"
			android:textSize="16sp"
			android:paddingTop="16dp"
			android:paddingBottom="4dp"/>
		<CheckBox
			android:id="@+id/remote_dns"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/remote_dns"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/remote_dns_desc"
			android:textSize="12sp"
			android:textColor="@color/hint_text"
			android:paddingLeft="8dp"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/dns_ipv4"/>
		<EditText
			android:id="@+id/dns_ipv4"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:digits="0123456789."/>
		<TextView
			android:id="@+id/system_dns_v4_hint"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text=""
			android:textSize="11sp"
			android:textColor="@color/hint_text"
			android:paddingLeft="4dp"
			android:paddingTop="2dp"
			android:paddingBottom="2dp"
			android:background="?attr/selectableItemBackground"
			android:clickable="true"
			android:focusable="true"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/dns_ipv6"/>
		<EditText
			android:id="@+id/dns_ipv6"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:digits="0123456789abcdef:"/>
		<TextView
			android:id="@+id/system_dns_v6_hint"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text=""
			android:textSize="11sp"
			android:textColor="@color/hint_text"
			android:paddingLeft="4dp"
			android:paddingTop="2dp"
			android:paddingBottom="2dp"
			android:background="?attr/selectableItemBackground"
			android:clickable="true"
			android:focusable="true"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Routing Mode"
			android:textStyle="bold"
			android:textSize="16sp"
			android:paddingTop="16dp"
			android:paddingBottom="4dp"/>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<CheckBox
				android:id="@+id/global"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/global"/>
			<Button
				android:id="@+id/apps"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/apps"/>
		</LinearLayout>
	</LinearLayout>
</ScrollView>
