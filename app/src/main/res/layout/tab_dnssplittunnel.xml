<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:padding="8dp">

		<!-- Split Tunnel Enable -->
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/card_background"
			android:padding="16dp"
			android:layout_marginBottom="8dp">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/dns_split_tunnel_enable"
				android:textStyle="bold"
				android:textSize="16sp"/>
			<CheckBox
				android:id="@+id/dns_split_tunnel_enable"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:checked="true"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/dns_split_tunnel_enable_desc"
				android:textSize="12sp"
				android:textColor="@color/hint_text"/>
		</LinearLayout>

		<!-- Foreign DNS Servers -->
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/card_background"
			android:padding="16dp"
			android:layout_marginBottom="8dp">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/dns_foreign_servers"
				android:textStyle="bold"
				android:textSize="16sp"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/dns_foreign_servers_desc"
				android:textSize="12sp"
				android:textColor="@color/hint_text"
				android:layout_marginBottom="8dp"/>

			<!-- Container for dynamic DNS entries -->
			<LinearLayout
				android:id="@+id/dns_entries_container"
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>

			<!-- Add DNS button -->
			<Button
				android:id="@+id/dns_add_button"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/dns_add_entry"
				android:layout_marginTop="8dp"/>
		</LinearLayout>

		<!-- Info Section -->
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/card_background"
			android:padding="16dp"
			android:layout_marginBottom="8dp">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/dns_split_tunnel_info"
				android:textStyle="bold"
				android:textSize="14sp"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/dns_split_tunnel_info_desc"
				android:textSize="12sp"
				android:paddingTop="4dp"
				android:textColor="@color/hint_text"/>
		</LinearLayout>

	</LinearLayout>
</ScrollView>
