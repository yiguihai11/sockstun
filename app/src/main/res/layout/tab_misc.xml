<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:padding="8dp">

		<!-- Task Stack Size -->
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/card_background"
			android:padding="16dp"
			android:layout_marginBottom="8dp">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/task_stack_size"
				android:textStyle="bold"
				android:textSize="16sp"/>
			<EditText
				android:id="@+id/task_stack_size"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:inputType="number"
				android:text="81920"/>
		</LinearLayout>

		<!-- Log Level -->
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/card_background"
			android:padding="16dp"
			android:layout_marginBottom="8dp">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/log_level"
				android:textStyle="bold"
				android:textSize="16sp"/>
			<Spinner
				android:id="@+id/log_level"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
		</LinearLayout>

		<!-- TCP Buffer Size -->
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/card_background"
			android:padding="16dp"
			android:layout_marginBottom="8dp">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/tcp_buffer_size"
				android:textStyle="bold"
				android:textSize="16sp"/>
			<EditText
				android:id="@+id/tcp_buffer_size"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:inputType="number"
				android:text="65536"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Default: 65536"
				android:textSize="12sp"
				android:textColor="@color/hint_text"/>
		</LinearLayout>

		<!-- UDP Recv Buffer Size -->
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/card_background"
			android:padding="16dp"
			android:layout_marginBottom="8dp">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/udp_recv_buffer_size"
				android:textStyle="bold"
				android:textSize="16sp"/>
			<EditText
				android:id="@+id/udp_recv_buffer_size"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:inputType="number"
				android:text="524288"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Default: 524288"
				android:textSize="12sp"
				android:textColor="@color/hint_text"/>
		</LinearLayout>

		<!-- UDP Copy Buffer Nums -->
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/card_background"
			android:padding="16dp"
			android:layout_marginBottom="8dp">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/udp_copy_buffer_nums"
				android:textStyle="bold"
				android:textSize="16sp"/>
			<EditText
				android:id="@+id/udp_copy_buffer_nums"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:inputType="number"
				android:text="10"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Default: 10"
				android:textSize="12sp"
				android:textColor="@color/hint_text"/>
		</LinearLayout>

		<!-- Connect Timeout -->
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/card_background"
			android:padding="16dp"
			android:layout_marginBottom="8dp">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/connect_timeout"
				android:textStyle="bold"
				android:textSize="16sp"/>
			<EditText
				android:id="@+id/connect_timeout"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:inputType="number"
				android:text="10000"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Default: 10000 (ms)"
				android:textSize="12sp"
				android:textColor="@color/hint_text"/>
		</LinearLayout>

		<!-- TCP Read Write Timeout -->
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/card_background"
			android:padding="16dp"
			android:layout_marginBottom="8dp">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/tcp_read_write_timeout"
				android:textStyle="bold"
				android:textSize="16sp"/>
			<EditText
				android:id="@+id/tcp_read_write_timeout"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:inputType="number"
				android:text="300000"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Default: 300000 (ms)"
				android:textSize="12sp"
				android:textColor="@color/hint_text"/>
		</LinearLayout>

		<!-- UDP Read Write Timeout -->
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/card_background"
			android:padding="16dp"
			android:layout_marginBottom="8dp">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/udp_read_write_timeout"
				android:textStyle="bold"
				android:textSize="16sp"/>
			<EditText
				android:id="@+id/udp_read_write_timeout"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:inputType="number"
				android:text="60000"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Default: 60000 (ms)"
				android:textSize="12sp"
				android:textColor="@color/hint_text"/>
		</LinearLayout>

		<!-- Max Session Count -->
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/card_background"
			android:padding="16dp"
			android:layout_marginBottom="8dp">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/max_session_count"
				android:textStyle="bold"
				android:textSize="16sp"/>
			<EditText
				android:id="@+id/max_session_count"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:inputType="number"
				android:text="0"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="0 = unlimited"
				android:textSize="12sp"
				android:textColor="@color/hint_text"/>
		</LinearLayout>

		<!-- PID File -->
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/card_background"
			android:padding="16dp"
			android:layout_marginBottom="8dp">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/pid_file"
				android:textStyle="bold"
				android:textSize="16sp"/>
			<EditText
				android:id="@+id/pid_file"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:inputType="text"
				android:text=""/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Not supported on Android"
				android:textSize="12sp"
				android:textColor="@color/hint_text"/>
		</LinearLayout>

		<!-- Limit Nofile -->
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/card_background"
			android:padding="16dp"
			android:layout_marginBottom="8dp">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/limit_nofile"
				android:textStyle="bold"
				android:textSize="16sp"/>
			<EditText
				android:id="@+id/limit_nofile"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:inputType="number"
				android:text="65535"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Limited by Android sandbox"
				android:textSize="12sp"
				android:textColor="@color/hint_text"/>
		</LinearLayout>

	</LinearLayout>
</ScrollView>
