<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:padding="8dp">

		<!-- TCP SOCKS5 Configuration -->
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="TCP SOCKS5 代理设置"
			android:textStyle="bold"
			android:textSize="16sp"
			android:layout_marginBottom="8dp"
			android:layout_marginTop="8dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/socks_addr"
			android:singleLine="true"/>
		<EditText
			android:id="@+id/socks_addr"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:layout_marginBottom="4dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/socks_port"
			android:singleLine="true"/>
		<EditText
			android:id="@+id/socks_port"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:inputType="number"
			android:layout_marginBottom="4dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/socks_user"
			android:singleLine="true"/>
		<EditText
			android:id="@+id/socks_user"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:layout_marginBottom="4dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/socks_pass"
			android:singleLine="true"/>
		<EditText
			android:id="@+id/socks_pass"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:inputType="textPassword"
			android:layout_marginBottom="8dp"/>

		<!-- UDP SOCKS5 Configuration -->
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="UDP SOCKS5 代理设置"
			android:textStyle="bold"
			android:textSize="16sp"
			android:layout_marginBottom="8dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="UDP 代理地址 (留空则使用TCP设置)"
			android:singleLine="true"/>
		<EditText
			android:id="@+id/udp_addr"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:layout_marginBottom="4dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="UDP 代理端口 (留空则使用TCP设置)"
			android:singleLine="true"/>
		<EditText
			android:id="@+id/udp_port"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:inputType="number"
			android:layout_marginBottom="4dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="UDP 认证用户名 (留空则使用TCP设置)"
			android:singleLine="true"/>
		<EditText
			android:id="@+id/udp_user"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:layout_marginBottom="4dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="UDP 认证密码 (留空则使用TCP设置)"
			android:singleLine="true"/>
		<EditText
			android:id="@+id/udp_pass"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:inputType="textPassword"
			android:layout_marginBottom="8dp"/>

		<!-- UDP Relay Mode -->
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="UDP 转发模式"
			android:singleLine="true"/>
		<Spinner
			android:id="@+id/udp_relay_mode"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp"
			android:entries="@array/udp_relay_modes"/>

		<!-- DNS Configuration -->
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="DNS 设置"
			android:textStyle="bold"
			android:textSize="16sp"
			android:layout_marginBottom="8dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/dns_ipv4"
			android:singleLine="true"/>
		<EditText
			android:id="@+id/dns_ipv4"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:digits="0123456789."
			android:layout_marginBottom="4dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/dns_ipv6"
			android:singleLine="true"/>
		<EditText
			android:id="@+id/dns_ipv6"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:digits="0123456789abcdef:"
			android:layout_marginBottom="8dp"/>

		<!-- Feature Toggles -->
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="功能开关"
			android:textStyle="bold"
			android:textSize="16sp"
			android:layout_marginBottom="8dp"/>

		<CheckBox
			android:id="@+id/chnroutes_enabled"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="启用中国路由分流 (内置)"/>

		<CheckBox
			android:id="@+id/acl_enabled"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="启用访问控制列表 (内置)"/>

		<CheckBox
			android:id="@+id/smart_proxy_enabled"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="启用智能代理 (直连失败后自动代理)"/>

		<!-- Smart Proxy Configuration -->
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="智能代理设置"
			android:textStyle="bold"
			android:textSize="16sp"
			android:layout_marginBottom="8dp"
			android:layout_marginLeft="16dp"
			android:layout_marginStart="16dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="直连超时时间 (毫秒)"
			android:singleLine="true"
			android:layout_marginLeft="16dp"
			android:layout_marginStart="16dp"/>
		<EditText
			android:id="@+id/smart_proxy_timeout"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:inputType="number"
			android:layout_marginBottom="4dp"
			android:layout_marginLeft="16dp"
			android:layout_marginStart="16dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="IP屏蔽时间 (分钟)"
			android:singleLine="true"
			android:layout_marginLeft="16dp"
			android:layout_marginStart="16dp"/>
		<EditText
			android:id="@+id/smart_proxy_block_expiry"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:inputType="number"
			android:layout_marginBottom="8dp"
			android:layout_marginLeft="16dp"
			android:layout_marginStart="16dp"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			<CheckBox
				android:id="@+id/ipv4"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/ipv4"/>
			<CheckBox
				android:id="@+id/ipv6"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/ipv6"/>
		</LinearLayout>

		<CheckBox
			android:id="@+id/global"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/global"/>

		<CheckBox
			android:id="@+id/remote_dns"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/remote_dns"/>

		<!-- Action Buttons -->
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_marginTop="16dp">
			<Button
				android:id="@+id/apps"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/apps"/>
		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			<Button
				android:id="@+id/save"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/save"/>
			<Button
				android:id="@+id/control"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/control_enable"/>
		</LinearLayout>

		<!-- Log Display Section -->
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="实时日志"
			android:textStyle="bold"
			android:textSize="16sp"
			android:layout_marginBottom="8dp"
			android:layout_marginTop="16dp"/>

		<ScrollView
			android:id="@+id/log_scrollview"
			android:layout_width="fill_parent"
			android:layout_height="200dp"
			android:background="#000000"
			android:padding="8dp">

			<TextView
				android:id="@+id/log_textview"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="#00FF00"
				android:textSize="10sp"
				android:fontFamily="monospace"
				android:text="等待日志信息...\n"/>
		</ScrollView>

		<!-- Log Control Buttons -->
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_marginTop="8dp">
			<Button
				android:id="@+id/log_refresh"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="刷新日志"
				android:textSize="12sp"/>
			<Button
				android:id="@+id/log_clear"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="清空显示"
				android:textSize="12sp"/>
		</LinearLayout>
	</LinearLayout>
</ScrollView>
